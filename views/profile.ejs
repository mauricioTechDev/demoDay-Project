  <!-- PROFILE and HOMES -->
  <section id="team">
    <h2>It's simple. Create a virtual profile. Recieve home prices based on the input. Save the homes if you would like. Then clear the profile to make another.</h2>
    <% if (user.local.email) { %>
    <section class="questionSection">
      <form action="/userInfoIntake" autocomplete="off" method="POST">
        <ul>
          <li>
            <span class="userInfoInputArea">Name: </span>
            <input class="userInputArea" required="This field is required" type="text" placeholder="name" name="name">
          </li>
          <li>
            <span class="userInfoInputArea">Max Price of Home: </span>
            <span>(min 530,000 max 999,999)</span>
            <input class="userInputArea" type="number" placeholder="annual income" name="income">
          </li>
          <li>
            <button id="pushForHomes" class="submitForm" type="submit">Submit</button>
          </li>
          <span>(Click again for home prices)</span>
        </ul>
      </form>
    </section>
    <% } %>

    <section class="userInfoSection">
      <ul class="userInfo">
        <% for(var i=0; i<familyInfo.length; i++) {%>
        <li class="userInfo">
          <span>PROFILE</span>
          <h3>User Name</h3>
          <p contenteditable="true" class="userInfoName"><%= familyInfo[i].name %></p>
          <!-- <h3>User Average Income</h3> -->
          <p contenteditable="true" class="userInfoIncome"><%= familyInfo[i].income %></p>
          <p class="edit">CLICK TO UPDATE</p>
          <p class="trash">CLEAR(clears form/homes to update)</p>
        </li>
        <%}%>
           </ul>
       </section>


         <!-- <h3></h3> -->
     </section>


     <!-- EPLORE BELLOW -->
     <section id="courses">
          <div class="container">
               <div class="row">
                 <h2 class="averageHomePriceTitle">Explore and save homes below ðŸ’«</h2>
                 <h2 class="averageHomePriceTitle">Then head over to our "Share Your Thoughts" page. Where you can connect with other activist.</h2>
               </div>
          </div>
     </section>


     <!-- HOME PRICES -->
     <section id="testimonial">
          <div class="container">
               <div class="row">


                 <section>
                   <ul class="homeList" >

        <% for(var i=0 ; i<homes.length; i++) { %>
        <% if(familyInfo.length > 0) { %>

        <% if(homes[i].amount <= familyInfo[0].income) { %>
        <!-- why is this possile PLEASE!! -->
        <li class="lookedUpHomes">
          <h3 class="introduceHome">Home Address</h3>
          <span class="exampleHomeStreet"><%= homes[i].street %></span>
          <span class="exampleHomeCity"><%= homes[i].city %></span>
          <span class="exampleHomeState"><%= homes[i].state %></span>
          <span class="exampleHomeZipcode"><%= homes[i].zipcode %></span>
          <h3 class="homePrice">Price: <span class="homePriceValue"><%= homes[i].amount %></span></h3>
          <h3 class="homeRoomInfo">Bathrooms: <span class="exampleHomeBathrooms"><%= homes[i].bathrooms %></span></h3>
          <h3 class="homeRoomInfo">Bedrooms: <span class="exampleHomeBedrooms"><%= homes[i].bedrooms %></span></h3>
          <h3 class="homeRoomInfo">Year Built: <span class="exampleHomeYearbuilt"><%= homes[i].yearBuilt %></span> </h3>
          <a class="clickToGetMoreInfoOnHome" href="<%= homes[i].homeWebPage %>" target="_blank" rel="noopener noreferrer">Click For More Info</a>
          <p class="save">SAVE</p>
          <p class="deleteHome">DELETE</p>
        </li>
        <%}%>
                          <%}%>
        <%}%>
                     </ul>
                 </section>
          </div>
     </section>


